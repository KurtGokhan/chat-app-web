{
    "version": "2.1.1",
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "target": "ES2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "declaration": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "stripInternal": true,
        "pretty": true,
        "outDir": "dist",
        "removeComments": false
    },
    "exclude": [
        "**/tmp",
        "**/temp",
        "**/build",
        "**/dist",
        "**/node_modules"
    ]
}
